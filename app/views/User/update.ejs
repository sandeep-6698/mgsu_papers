<div class="row">
    <div class="col-md-4 col-sm-2"></div>
    <div class="col-md-4 col-sm-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 style="margin: 0px;">Update User</h4>
            </div>
            <div class="pane-body" style="padding: 20px;">
                <% if(locals.user._id == data._id){%>
                <p class="text-danger">You can change only Username and Password!</p>
                <% }else{%>
                <p class="text-danger">You can not change Email and Mobile!</p>
                <% }%>
                <form action="/user/updateUser" method="post" onsubmit="return submitForm();">
                    <input type="hidden" name="_id" value="<%=data._id%>">
                    <div class="form-group">
                        <input type="text" class="form-control" name="username" placeholder="Username"
                            value="<%=data.username%>" required="required">
                    </div>
                    <div class="form-group">
                        <input type="email" value="<%=data.email%>" class="form-control" placeholder="Email"
                            required="required" readonly>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="password" value="<%=data.password%>"
                            name="password" placeholder="Password" required="required">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" onchange="validatePass(this.value,password.value);"
                            onkeyup="validatePass(this.value,password.value);" placeholder="Confirm Password"
                            required="required">
                        <span class="confirmMsg" style="color: red;"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" value="<%=data.mobile%>" class="form-control" placeholder="Mobile Number"
                            required="required" readonly>
                    </div>
                    <div class="form-group">
                        <% if(locals.user._id == data._id){%>
                        <select name="role" class="form-control" readonly>
                            <option value="1" selected>Admin</option>
                        </select>
                        <% }else{%>
                        <select name="role" class="form-control">
                            <option disabled>Role</option>
                            <option value="1" selected>Admin</option>
                            <option value="0" <% if(!data.role){%> <%="selected"%> <% }%>>
                                Operator
                            </option>
                        </select>
                        <% }%>
                    </div>
                    <div class="form-group">
                        <input type="radio" name="status" value="1" checked <% if(locals.user._id == data._id){%>
                            onclick="return false" <% }%>>Active
                        <input type="radio" name="status" value="0" <% if(!data.status){%> <%="checked"%> <% }%>
                            <% if(locals.user._id == data._id){%> onclick="return false" <% }%>>Inactive
                    </div>
                    <input type="submit" class="btn btn-primary btn-block" value="Update">
                </form>
            </div>
        </div>
    </div>
</div>