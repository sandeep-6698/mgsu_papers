<div class="row">
    <div class="col-md-2 col-sm-2"></div>
    <div class="col-md-8 col-sm-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 style="margin: 0;">Download Paper</h3>
            </div>
            <div class="panel-body" style="padding: 20px;">
                <div class="">
                    <table class="table table-hover">
                        <% if(paper_data[0]){%>
                        <tr>
                            <th colspan="3"><%=paper_data[0].course.course_name%> (
                                <%= paper_data[0].course.yearly ? "Year - " : "Sem - "%><%=paper_data[0].sem%> ),
                                <%=paper_data[0].year%></th>

                        </tr>
                        <tr>
                            <th>#</th>
                            <th>Subject</th>
                            <th>Action</th>
                        </tr>
                        <% 
                    var count =1; 
                    paper_data.forEach(data=>{
                    %>
                        <tr>
                            <td><%= count++ %></td>
                            <td><%=data.subjects.sub_name%></td>
                            <td><a href="/download/view/<%= data.paper_name%>" target="_blank">Download</a></td>
                        </tr>
                        <% })%>
                        <!--End loop-->
                        <% } else {%>
                        <tr>
                            <th class="text-warning">Sorry!, Paper not uploded.</th>
                        </tr>
                        <% }%>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>